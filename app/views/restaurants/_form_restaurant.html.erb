<h1>Restaurant Registration form</h1>

<%= form_for @restaurant do |f| %>
  <ol>

<div>
    <%= f.label :name %>
    <%= f.text_field :name %>
</div>
<div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :price_range %>
    <%= f.text_field :price_range %>
  </div>
  <div>
    <%= f.label :menu %>
    <%= f.text_field :menu %>
  </div>
  <div>
    <%= f.label :url %>
    <%= f.text_field :url %>
  </div>
  <div>
    <%= f.label :summary %>
    <%= f.text_area :summary%>
  </div>
  <div>
    <%= f.label :neighbourhood %>
    <%= f.text_field :neighbourhood%>
  </div>
  <div>
    <%= f.label :opening_time %>
    <%= f.text_field :opening_time %>
  </div>
  <div>
    <%= f.label :closing_time %>
    <%= f.text_field :closing_time %>
  </div>
  <div>
    <%= f.label :party_size %>
    <%= f.text_field :party_size %>
  </div>
  <div>
    <%= f.label :max_capacity %>
    <%= f.text_field :max_capacity %>
  </div>

  </ol>

  <%= f.submit 'Registration' %>

<% end %>
