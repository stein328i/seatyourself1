<h1>Log In</h1>

<%= form_for :session, url: sessions_path do |f| %>

  <div class='field'>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class='field'>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class='field'>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit 'Login' %>

<% end %>
