<h1>My profile</h1>

<div>
<%= @user.email %><br>
<%= @user.account_type %>
<% if @user.account_type == "Owner" %>
  <p>you can register or edit restaurants info</p>
  <%= link_to 'Registrate my restaurant', new_restaurant_path %><br>
  <% @restaurants.each do |restaurant| %>
  <div>
    <%= image_tag(restaurant.url, size: '100') %><br>
    <%= restaurant.name %>
    <%= link_to 'Edit', edit_restaurant_path(restaurant) %>  |
    <%= link_to 'Delete',restaurant_path(restaurant), method: :delete %><br>
  </div>
  <% end %>


  <% @up_comming_reservation.each do |reservation| %>
  <ul>
    <li>party size: <%= reservation.party_size %></li>
    <li>date: <%= reservation.date %></li>
    <li>time: <%= reservation.time %></li>
  </ul>
  <% end %>

<% end %>

</div>
